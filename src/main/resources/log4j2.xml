<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="MyApp">
    <Properties>
        <!-- Define a property for the log file location -->
        <Property name="LOG_DIR">io/logs</Property>
        <Property name="PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender (optional, for real-time console viewing) -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <ThresholdFilter level="OFF" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${PATTERN}"/>
        </Console>

        <!-- Rolling File Appender -->
        <RollingFile name="FileAppender"
                     fileName="${LOG_DIR}/application.log"
                     filePattern="${LOG_DIR}/logs-archive/application-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>${PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <!-- Roll the file daily -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- Roll the file if it reaches 10MB -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <!-- Keep a maximum of 7 log files -->
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Root logger logs INFO level and higher to both appenders -->
        <Root level="info">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>
